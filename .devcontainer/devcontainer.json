{
    "name": "Python & Git Dev Container with Fontconfig",
    "build": {
      "dockerfile": "Dockerfile"
    },
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash"
        },
        "extensions": [
          "ms-python.python",
          "eamodio.gitlens"
        ]
      }
    },
    "postCreateCommand": "pip install -r requirements.txt"
  }
  